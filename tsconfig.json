{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
  },
  "exclude": [
    "node_modules",
    "src/.vuepress/.temp",
    "src/.vuepress/dist",
    "src/.vuepress/public",
    "dist",
    "**/*.js"
  ],
  "files": ["node_modules/gsap/types/index.d.ts"],
  // "files": ["package.json"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
